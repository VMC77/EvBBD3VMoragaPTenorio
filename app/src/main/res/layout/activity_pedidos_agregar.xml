<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.moraga.ev2vmoragaptenorio.Pedidos.PedidosAgregarActivity">
    <TextView
        android:id="@+id/rutCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ELEGIR RUT DE CLIENTE"/>
    <Spinner
        android:id="@+id/clientes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <TextView
        android:id="@+id/fechaentrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FECHA DE ENTREGA"/>
    <EditText
        android:id="@+id/agregarfechaentrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/ingresarPedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:onClick="ingresarPedidoClick"/>
    <Button
        android:id="@+id/volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="volver"
        android:text="VOLVER"/>
</LinearLayout>
